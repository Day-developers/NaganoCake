<div class="form-group">
  <%= f.label :"商品画像", class: "col-sm-2 control-label" %>
  <%= f.attachment_field :image, class: "image" %>
</div>
<div class="form-group">
  <%= f.label :"商品名", class: "col-sm-2 control-label" %>
  <%= f.text_field :name, class: "col-sm-4 form-control-static name" %>
</div>
<div class="form-group">
  <%= f.label :"商品説明", class: "col-sm-2 control-label" %>
  <%= f.text_area :caption, class: "col-sm-4 control-label caption" %>
</div>
<div class="form-group">
  <%= f.label :"ジャンル", class: "col-sm-2 control-label" %>
  <%= f.collection_select(:genre_id, Genre.all, :id, :name, prompt: "-- 選択してください --", class: "col-sm-8 genre_id") %>
</div>
<div class="form-group">
  <%= f.label :"税抜価格", class: "col-sm-2 control-label" %>
  <%= f.text_field :price, class: "col-sm-4 control-label explanation" %>円
</div>
<div class="form-group radio_button">
  <%= f.label :"販売ステータス", class: "col-sm-2 control-label" %>
  <%= f.radio_button :is_active, true %>
  <%= f.label :is_active, "販売中", value: :true %>
  <%= f.radio_button :is_active, false, class: "ml-3" %>
  <%= f.label :is_active, "販売停止中", value: :false %>
</div>