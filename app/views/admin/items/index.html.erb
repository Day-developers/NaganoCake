<div class="container">
  <div class="row">
    <div class="col-sm-10 px-sm-0">
      <h3>商品一覧</h3>
      <%= link_to new_admin_item_path do %>
        <div class="text-right py-3">
          <button type="button" class="btn btn-success ">
            新規登録
          </button>
        </div>
      <% end %>
      <table class="table">
        <thead class=" table-hover table-inverse table-active">
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜価格</th>
            <th>ジャンル</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td>
              <%= item.id %>
            </td>
            <td>
              <%= link_to admin_item_path(item.id) do %>
                <%= item.name %>
              <% end %>
            </td>
            <td>
              <%= item.price.to_s(:delimited) %>
            </td>
            <td>
              <%= item.genre.name %>
            </td>
            <td>
              <% if item.is_active == true %>
                <p>販売中</p>
              <% else  %>
                <p>販売停止中</p>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= paginate @items, class:"text-center" %>
</div>
