<div class="container">
  <div class="row">
    <div class="col-sm-10 px-sm-0">
      <h3><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h3>

      <table class="table">
        <tbody>
          <tr>
            <td>会員ID</td>
            <td><%= @customer.id %></td>
          </tr>

          <tr>
            <td>氏名</td>
            <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
          </tr>

          <tr>
            <td>フリガナ</td>
            <td><%= @customer.kana_last_name %>　<%= @customer.kana_first_name %></td>
          </tr>

          <tr>
            <td>郵便番号</td>
            <td><%= @customer.postal_code %></td>
          </tr>

          <tr>
            <td>住所</td>
            <td><%= @customer.address %></td>
          </tr>

          <tr>
            <td>電話番号</td>
            <td><%= @customer.phone_number %></td>
          </tr>

          <tr>
            <td>メールアドレス</td>
            <td><%= @customer.phone_number %></td>
          </tr>

          <tr>
            <td>会員ステータス</td>
            <td>
              <% if @customer.is_deleted == false %>
                <p class="text-success">有効</p>
              <% else %>
                <p class="text-primary">退会</p>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>

      <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: "btn btn-success" %>
      <%= link_to "注文履歴一覧を見る", admin_root_path, class: "btn btn-primary" %>
    </div>
  </div>
</div>