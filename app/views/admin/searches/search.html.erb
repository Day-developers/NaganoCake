<!--会員検索一覧-->
<div class="container">
  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto">
      <h2 class="font-weight-bold mt-5"><i class="fas fa-users"></i>会員一覧</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto">
      <table class="table table-hover table-inverse mt-3 mb-5">
        <thead>
          <tr>
            <th class="table-light border-dark">会員ID</th>
            <th class="table-light border-dark">氏名</th>
            <th class="table-light border-dark">メールアドレス</th>
            <th class="table-light border-dark">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
          <tr>
            <td class="align-middle border-dark"><%= customer.id %></td>
            <td class="align-middle border-dark">
              <%= link_to admin_customer_path(customer.id), class: "text-dark" do %>
                <%= customer.last_name %> <%= customer.first_name %>
              <% end %>
            </td>
            <td class="align-middle border-dark"><%= customer.email %></td>
            <td class="align-middle border-dark">
              <% if customer.is_deleted == true %>
                <p class="text-secondary mt-3">退会</p>
              <% else %>
                <p class="text-success mt-3">有効</p>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= paginate @customers, class: "text-center" %>
</div>

<!--商品検索一覧-->
<div class="container">
  <div class="row">
    <div class="col-sm-7 px-sm-0 mx-auto">
      <h2 class="font-weight-bold mt-5"><i class="fas fa-search-plus"></i>商品一覧</h2>
    </div>
    <div class="col-sm-3 px-sm-0 mt-5 text-center">
      <%= link_to "新規登録", new_admin_item_path, class: "btn btn-success" %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto">
      <table class="table table-hover table-inverse mt-3 mb-5">
        <thead>
          <tr>
            <th class="table-light border-dark">商品ID</th>
            <th class="table-light border-dark">商品名</th>
            <th class="table-light border-dark">税抜価格</th>
            <th class="table-light border-dark">ジャンル</th>
            <th class="table-light border-dark">ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td class="align-middle border-dark">
              <%= item.id %>
            </td>
            <td class="align-middle border-dark">
              <%= link_to admin_item_path(item.id), class: "text-dark" do %>
                <%= item.name %>
              <% end %>
            </td>
            <td class="align-middle border-dark">
              <%= item.price.to_s(:delimited) %>
            </td>
            <td class="align-middle border-dark">
              <%= item.genre.name %>
            </td>
            <td class="border-dark">
              <% if item.is_active == true %>
                <p class="text-success mt-3">販売中</p>
              <% else  %>
                <p class="text-danger mt-3">>販売停止中</p>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= paginate @items, class: "text-center" %>
</div>

