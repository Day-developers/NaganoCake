<div class="container">
  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto">
      <h2 class="font-weight-bold mt-5">ジャンル一覧・追加</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto">
      <div class="mb-3">
        <p class="d-inline-block">ジャンル名</p>
        <%= form_with model: [:admin, @genre], class: "d-inline-block", local: true do |f| %>
          <%= f.text_field :name, placeholder: "ジャンル名", class: "mx-5" %>
          <%= f.submit "　新規登録　", class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
    <div class="row ml-5 pl-4">
      <div class="col-sm-6 px-sm-0">
        <table class="table table-inverse">
          <thead>
            <tr>
              <th class="table-light border-dark">ジャンル</th>
              <th colspan="1", class="table-light border-dark"></th>
            </tr>
          </thead>
          <tbody>
            <% @genres.each do |genre| %>
            <tr>
              <td class="align-middle border-dark"><%= genre.name %></td>
              <td class="align-middle border-dark", style="width: 30%">
                <%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-success" %>
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
</div>
