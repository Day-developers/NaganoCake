<div class="container">
  <div class="row">
    <div class="col-sm-10 px-sm-0">
      <h3 class="mb-5">ジャンル編集</h3>

      <div>
        <p class="d-inline-block">ジャンル名</p>
        <%= form_with model: [:admin, @genre], class: "d-inline-block", local: true do |f| %>
          <%= f.text_field :name, class: "mx-5" %>
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        <% end %>
      </div>

    </div>
  </div>
</div>