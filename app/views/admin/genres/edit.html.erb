<div class="container">
  <div class="row">
    <div class="col-sm-10 my-5">
      <h2 class="offset-sm-1 mb-5 font-weight-bold">ジャンル編集</h2>

      <div class="col-sm-10 px-sm-0 mx-auto">
        <%= form_with model: [:admin, @genre], class: "d-inline-block", local: true do |f| %>
          <%= render 'layouts/error', obj: @genre %>
        <div class="field">
          <%= f.label "ジャンル名" %>
          <%= f.text_field :name, class: "mx-5" %>
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
        <% end %>
      </div>

    </div>
  </div>
</div>