<div class = "container">
  <div class = "row">
    <div class = "col-sm-12">
      <h4 class = "offset-sm-1">注文履歴一覧</h4>
      <table class = "table table-bordered">
        <thead class = "table-active">
          <tr>
            <th class = "border border-dark">注文日</th>
            <th class = "border border-dark">配送先</th>
            <th class = "border border-dark">注文商品</th>
            <th class = "border border-dark">支払金額</th>
            <th class = "border border-dark">ステータス</th>
            <th class = "border border-dark">注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>
            <td class = "border border-dark">
              <%= order.created_at.strftime("%Y/%m/%d") %>
            </td>
            <td class = "border border-dark">
              <%= order.postal_code %><br />
              <%= order.address %><br />
              <%= order.name %>
            </td>
            <td class = "border border-dark">
              <%= order.order_items.each do |order_item| %>
                <%= order_item.item.name %>
              <% end %>
            </td>
            <td class = "border border-dark">
              <%= order.payment_amount %>円
            </td>
            <td class = "border border-dark">
              <%= order.status %>
            </td>
            <td class = "border border-dark">
              <%= link_to "表示する", order_path(order), class: "btn btn-sm btn-success" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>