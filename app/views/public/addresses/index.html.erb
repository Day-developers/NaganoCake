<div class = "container">
  <div class = "row">
    <div class = "col-sm-12">
      <h4 class = "mb-4">配送先登録 / 一覧</h4>
      <%= form_with model: @address, url: addresses_path, local:true do |f| %>

      <div class = "field">
        <%= f.label "郵便番号(ハイフンなし)", class: "col-3" %>
        <%= f.text_field :postal_code, autocomplete: "postal_code", placeholder: "0000000", class: "col-3" %>
      </div>

      <div class = "field">
        <%= f.label "住所", class: "col-3" %>
        <%= f.text_field :address, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0", class: "col-6" %>
      </div>

      <div class = "field">
        <%= f.label "宛名", class: "col-3" %>
        <%= f.text_field :name, autocomplete: "name", placeholder: "令和道子", class: "col-3 mr-5" %>
        <%= f.submit "新規登録", class: "btn btn-success col-2 ml-3" %>
      </div>
      <% end %>
      
      <div class = "row">
        <table class = "table table-bordered col-sm-7 my-5">
        <thead class = "table-active">
          <tr >
            <th class = "border border-dark">郵便番号</th>
            <th class = "border border-dark">住所</th>
            <th class = "border border-dark">宛名</th>
            <th class = "border border-dark"></th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
          <tr>
            <td class = "border border-dark"><%= address.postal_code %></td>
            <td class = "border border-dark"><%= address.address %></td>
            <td class = "border border-dark"><%= address.name %></td>
            <td class = "border border-dark">
              <%= link_to "編集する", edit_address_path(address.id), class: "btn btn-sm btn-success mr-2" %>
              <%= link_to "削除する", address_path(address.id), method: :delete, class: "btn btn-sm btn-danger", "data-confirm" => "本当に削除しますか？" %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</div>